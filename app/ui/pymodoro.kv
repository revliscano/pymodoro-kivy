<Root>:
    Label:
        font_size: 40
        center_x: root.width / 2
        top: root.top - 10
        text: "PYMODORO"
    GridLayout:
    	cols: 3
    	center_x: root.width / 2
    	top: root.top - 80
    	width: 220

	    TimerLabel:
            id: timer_label
	        font_size: 40

	    Label:
	        text: "/"
	        font_size: 20

	    UpToLabel:
            id: up_to_label
	        font_size: 40

    StartNextLapse:
        id: start_next_lapse_button
    	font_size: 20
    	text: "START NEXT"
    	color: (0, 0, 0, 1)
    	background_color: (255, 255, 255, 1)
    	top: root.top - 160
    	center_x: root.width / 2
    	size: 150, 30

    AbortLapse:
        id: abort_lapse_button
        disabled: True
        font_size: 20
        text: "ABORT"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 200
        center_x: root.width / 2
        size: 150, 30
    Label:
        font_size: 20
        text: "Completed so far: "
        center_x: root.width / 2

    Counter:
        id: counter_label
        font_size: 20
        text: "0"
        center_x: root.width / 2 + 90
