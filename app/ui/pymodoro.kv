<Root>:
    Label:
        font_size: 40
        center_x: root.width / 2
        top: root.top - 30
        text: "PYMODORO"
    GridLayout:
    	cols: 3
    	center_x: root.width / 2
    	top: root.top - 100
    	width: 220

	    TimerLabel:
            id: timer_label
	        font_size: 40

	    Label:
	        text: "/"
	        font_size: 20

	    UpToLabel:
            id: up_to_label
	        font_size: 40

    StartNextLapse:
        id: start_next_lapse_button
    	font_size: 20
    	text: "START NEXT"
    	color: (0, 0, 0, 1)
    	background_color: (255, 255, 255, 1)
    	top: root.top - 180
    	center_x: root.width / 2
    	size: 150, 30

    AbortLapse:
        id: abort_lapse_button
        disabled: True
        font_size: 20
        text: "ABORT"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 220
        center_x: root.width / 2
        size: 150, 30

    SkipLapse:
        id: skip_lapse_button
        font_size: 20
        text: "SKIP"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 260
        center_x: root.width / 2
        size: 150, 30

    Label:
        font_size: 20
        text: "Completed so far: "
        center_x: root.width / 2

    Counter:
        id: counter_label
        font_size: 20
        text: "0"
        center_x: root.width / 2 + 90

    QuitSession:
        id: quit_session_button
        font_size: 15
        text: "QUIT SESSION"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 10
        center_x: root.width / 6
        size: 120, 20

<TitleScreen>
    GridLayout:
        cols: 1
        Label:
            font_size: 40
            text: "PYMODORO"
        StartSession:
            id: start_session_button
            font_size: 15
            text: "START SESSION"
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            size_hint: 1, 0.2

