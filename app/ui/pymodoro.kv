<Root>:
    Label:
        font_size: 40
        center_x: root.width / 2
        top: root.top - 30
        text: "PYMODORO"
    GridLayout:
    	cols: 3
    	center_x: root.width / 2
    	top: root.top - 100
    	width: 220

	    TimerLabel:
            id: timer_label
	        font_size: 40

	    Label:
	        text: "/"
	        font_size: 20

	    UpToLabel:
            id: up_to_label
	        font_size: 40

    StartNextLapse:
        id: start_next_lapse_button
    	font_size: 20
    	text: "START NEXT"
    	color: (0, 0, 0, 1)
    	background_color: (255, 255, 255, 1)
    	top: root.top - 180
    	center_x: root.width / 2
    	size: 150, 30

    AbortLapse:
        id: abort_lapse_button
        disabled: True
        font_size: 20
        text: "ABORT"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 220
        center_x: root.width / 2
        size: 150, 30

    SkipLapse:
        id: skip_lapse_button
        font_size: 20
        text: "SKIP"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 260
        center_x: root.width / 2
        size: 150, 30

    Label:
        font_size: 20
        text: "Completed so far: "
        center_x: root.width / 2

    Counter:
        id: counter_label
        font_size: 20
        text: "0"
        center_x: root.width / 2 + 90

    QuitSession:
        id: quit_session_button
        font_size: 15
        text: "QUIT SESSION"
        color: (0, 0, 0, 1)
        background_color: (255, 255, 255, 1)
        top: root.top - 10
        center_x: root.width / 6
        size: 120, 20

<TitleScreen>
    GridLayout:
        cols: 1
        Label:
            font_size: 40
            text: "PYMODORO"
        NormalSession:
            id: normal_session_button
            font_size: 15
            text: "NORMAL SESSION"
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            size_hint: 1, 0.2
        CustomSession:
            id: custom_session_button
            font_size: 15
            text: "CUSTOM SESSION"
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            size_hint: 1, 0.2

<HorizontalInput@BoxLayout>:
    orientation: "horizontal"
    label_text: ""
    placeholder: ""
    size_hint_x: 0.95
    Label:
        text: root.label_text
        size_hint: 0.40, 1
    TextInput:
        text: root.placeholder
        multiline: False
        size_hint: 0.60, 0.30
        pos_hint: {'center_y': 0.50}

<CustomSessionModal>
    size_hint: (0.75, 0.85)
    BoxLayout:
        size_hint: 0.95, 0.95
        orientation: "vertical"
        HorizontalInput:
            label_text: "Pomodoro Duration: "
            placeholder: "minutes"
        HorizontalInput:
            label_text: "Break Duration: "
            placeholder: "minutes"
        HorizontalInput:
            label_text: "Long Break Duration: "
            placeholder: "minutes"
        HorizontalInput:
            label_text: "Take long break after: "
            placeholder: "pomodoros"
        Button:
            size_hint: 0.9, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: "START"
